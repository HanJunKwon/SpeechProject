<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gg.speeechproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextToSpeechActivity" />
        <activity android:name=".SpeechToTextActivity"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission> <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission> <!-- 오디오 레코드 권한 -->
</manifest>